CompileFlags:
  Add: [-Wall, -Wextra, -Wpedantic, -std=c++17]
  Remove: [-W*, -std=*]

Diagnostics:
  ClangTidy:
    Add: [performance-*, modernize-*, readability-*]
    Remove: [modernize-use-trailing-return-type]
  UnusedIncludes: Strict

InlayHints:
  Enabled: Yes
  ParameterNames: Yes
  DeducedTypes: Yes
  Designators: Yes

Index:
  Background: Build
  StandardLibrary: Yes

Hover:
  ShowAKA: Yes

Style:
  FullyQualifiedNamespaces: No

Completion:
  AllScopes: Yes 